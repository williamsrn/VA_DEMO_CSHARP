@model VADemo.Models.Person

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Create</h2>
    <div class="form-horizontal">

        @Html.Partial("_createForm")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}





<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        //update bootstrap grid for page (non-modal)
        $('.form-group > label').removeClass("col-md-3").addClass("col-md-2");//remove modal grid styling
        $('.form-group > div').removeClass("col-md-9").addClass("col-md-10");//add grid styling for full page
    </script>
}
